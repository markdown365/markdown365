.files
  list-style none
  padding 0
  margin 0
  &-item
    height 5.2rem
    padding 7px
    cursor pointer
    border-top 0.1rem solid #f8f8f8
    border-bottom 0.1rem solid #f8f8f8
    overflow hidden
    &:hover
      box-shadow 0 0 10rem #f8f8f8 inset
      .files-item-basename
        opacity 0.2
        transform translateY(-3.6rem) rotateX(90deg)
      .files-item-filename
        opacity 1
        transform translateY(-3.6rem)
    &:active
      background-color #f8f8f8
    &-basename
    &-filename
      height 3.6rem
      line-height 3.6rem
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      overflow hidden
      text-overflow ellipsis
      transition all 0.15s ease-in-out
    &-filename
      opacity 0.2
      transform  rotateX(-90deg)
