.app-bar
  display flex
  height 4rem
  &-button
    width 4rem
    height 4rem
    margin 0
    padding 0
    font-size 2.4rem
    color #999
    background-color transparent
    border none
    outline none
    cursor pointer
    &:hover
    &:active
      outline none
    &:hover
      color #333
      background-color #f8f8f8
      &:active
        background-color #f0f0f0

  &-files
    width 4rem
    min-width 4rem
    &-toggle
      position relative
      z-index 1
    &-panel
      width 32rem
      display flex
      position fixed
      top 0
      left 0
      bottom 0
      padding-top 4rem
      transition all 0.3s ease-out
      opacity 0
      transform translateX(-100%)
      &-show
        opacity 1
        transform translateX(0)
        background-color rgba(255,255,255,0.9)
        border-right 0.1rem solid #f8f8f8
      &-container
        height 100%
        flex 1
        overflow-x hidden
        overflow-y auto

  &-title
    height 4rem
    line-height 3.8rem
    padding 0 0.6rem
    flex-grow 1
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    -webkit-app-region drag
  &-window
    width 12rem
    min-width 12rem
