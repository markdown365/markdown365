.app-bar
  display flex
  height 4rem
  &-button
    width 4rem
    height 4rem
    margin 0
    padding 0
    font-size 2.4rem
    background-color transparent
    border none
    outline none
    cursor pointer
    &:active
      outline none
    &:hover
      background-color #f8f8f8

  &-files
    width 4rem
    min-width 4rem
    &-toggle
      position relative
      z-index 1
    &-panel
      width 32rem
      position fixed
      top 0
      left 0
      bottom 0
      padding-top 4rem
      background-color rgba(255,255,255,0.9)
      border-right 0.1rem solid #f8f8f8
      box-shadow 0.2rem 0 0.5rem #f8f8f8

  &-title
    height 4rem
    line-height 3.8rem
    padding 0 0.6rem
    flex-grow 1
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  &-window
    width 12rem
    min-width 12rem
