.editor
  position absolute
  top 0
  right 50%
  bottom 0
  left 0
  &&-viewer-hide
    right 0
  &-container
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    padding 0.7rem
    font-size 1.8rem
  .CodeMirror
      width 100%
      height 100%
      .cm-header
        font-family Menlo, Monaco, Consolas, "Courier New", monospace, arial
      .cm-header-1
        font-size 150%
      .cm-header-2
        font-size 130%
      .cm-header-3
        font-size 120%
      .cm-header-4
        font-size 110%
      .cm-header-5
        font-size 100%
      .cm-header-6
        font-size 90%
      .cm-strong
        font-size 140%
