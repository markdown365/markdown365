.status-bar
  height 2.6rem
  position absolute
  right 0
  bottom 0
  left 0
  border-top 0.1rem solid #f8f8f8
  &-button
    width 3rem
    height 2.6rem
    margin 0
    padding 0
    font-size 1.8rem
    color #999
    background-color transparent
    border none
    outline none
    cursor pointer
    &:hover
    &:active
      outline none
    &:hover
      color #333
      background-color #f8f8f8
      &:active
        background-color #f0f0f0
  &-view
    position absolute
    top 0
    right 0.7rem
    bottom 0
    &-modes-panel
      width 12rem
      position absolute
      bottom 100%
      right -0.7rem
      z-index 2
      margin 0
      padding 0.7rem 1rem
      list-style none
      background-color #fcfcfc
      border 0.1rem solid #eee
      box-shadow -0.2rem -0.2rem 12rem #eee
      li
        height 2.8rem
        padding 0.5rem 0 0.5rem 2.8rem
        color #999
        position relative
        cursor pointer
        i
          width 1.8rem
          height 1.8rem
          position absolute
          top 0.5rem
          bottom 0.5rem
          left 0
          font-size 1.8rem
          font-weight bold
